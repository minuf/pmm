<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_colegios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Colegios" />

    <Button
        android:id="@+id/btn_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_colegios"
        android:layout_below="@+id/btn_colegios"
        android:layout_marginTop="14dp"
        android:text="Personal" />

    <Button
        android:id="@+id/btn_profesores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_personal"
        android:layout_below="@+id/btn_personal"
        android:layout_marginTop="16dp"
        android:text="Profesores" />

    <Button
        android:id="@+id/btn_consultas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_profesores"
        android:layout_below="@+id/btn_profesores"
        android:layout_marginTop="22dp"
        android:text="Consultas" />

</RelativeLayout>
